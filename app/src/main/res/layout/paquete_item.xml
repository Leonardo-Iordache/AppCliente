<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/package_image"
        android:layout_width="108dp"
        android:layout_height="64dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/package_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/paquete" />

    <TextView
        android:id="@+id/package_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="17dp"
        android:textAppearance="?attr/textAppearanceHeadline5"
        app:layout_constraintBottom_toTopOf="@+id/buzonPaquete"
        app:layout_constraintEnd_toStartOf="@+id/estadoPaquete"
        app:layout_constraintStart_toEndOf="@+id/package_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/estadoPaquete"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/package_text"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/buzonPaquete"
        android:layout_width="113dp"
        android:layout_height="22dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/package_image"
        app:layout_constraintTop_toBottomOf="@+id/package_text" />

</androidx.constraintlayout.widget.ConstraintLayout>